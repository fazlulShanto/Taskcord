{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:api": "turbo run build --filter=api",
    "build:bot": "turbo run build --filter=bot",
    "run:api": "node ./apps/api/dist/index.js",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=api",
    "dev:bot": "turbo run dev --filter=bot",
    "dev:dashboard": "turbo run dev --filter=taskcord-dashboard",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "api": "turbo run dev --filter=api",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tsdown": "^0.15.7",
    "tsup": "^8.2.4",
    "tsx": "^4.19.2",
    "turbo": "^2.5.8"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=22"
  },
  "name": "taskcord-bot-server",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild",
      "msw",
      "unrs-resolver"
    ]
  }
}
